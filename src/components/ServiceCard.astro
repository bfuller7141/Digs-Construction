---
interface ServiceCardProps {
    title: string;
    description: string;
    image: string;
    alt: string;
    link: string;
}

const {title, description, image, alt, link} = Astro.props as ServiceCardProps;
---
<div class="wrapper-col slide-col">
    <div class="wrapper">
        <img class="img-services" height="504" width="681" src={image} alt={alt} />
    </div>
    <div class="wrapper vert-center">
        <h3 class="title-lg">{title}</h2>
        <p class="body-md">
            {description}
        </p>
        <a href={link} class="btn-text-red" aria-label={`View ${title} gallery`}>See Our Work</a>
    </div>
</div>

<style>
    .img-services {
        width: 100%;
        height: 100%;
        aspect-ratio: 1.37/1;
        object-fit: cover;
    }

    .wrapper-col.slide-col {
        max-width: 100%;
        margin: 0 auto;
    }
</style>